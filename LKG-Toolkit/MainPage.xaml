<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LKG_Toolkit.MainPage">

    <ScrollView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout
                Grid.Column="0"
                Spacing="25"
                Padding="30,0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="StartAndExpand">

                <Image x:Name="ImagePreview"/>

                <HorizontalStackLayout
                    VerticalOptions="End">
                    <Label x:Name="fileLabel" Text="No Input File. " Padding="10"/>
                    <Button Text="Select File" Clicked="FileSelect_Clicked" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <VerticalStackLayout
                Grid.Column="1"
                Spacing="25"
                Padding="30,0"
                HorizontalOptions="Fill">

                <Label x:Name="stateLabel" Text="Connection State: Disconnected" BackgroundColor="Red"/>

                <VerticalStackLayout x:Name="devices">
                    
                </VerticalStackLayout>

                <Label x:Name="deviceInfo"/>

                <Button 
                    Text="Save Calibration To File"
                    Clicked="Save_Cal_Clicked"/>

                <Button
                    Text="Show File On Selected"
                    Clicked="Show_File"
                    />

                <Button
                    Text="Show On Selected Display"
                    Clicked="Show_Selected"/>

                <Button
                    Text="Hide On Selected Display"
                    Clicked="Hide_Selected"/>

                <Label
                    x:Name="text"
                    FontSize="18"
                    HeightRequest="1000"
                    HorizontalOptions="Fill"
                    VerticalOptions="FillAndExpand"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
