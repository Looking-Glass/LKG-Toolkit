<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LookingGlass.Toolkit.GUI.InputDialog"
        Width="300" Height="150">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock x:Name="PromptTextBlock" Grid.Row="0" />
		<TextBox x:Name="InputTextBox" Grid.Row="1" Margin="0,10,0,0" />
		<StackPanel Grid.Row="2" Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
			<Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
