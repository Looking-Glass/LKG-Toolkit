<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ToolkitGUI.PlaylistItemNameControl">
	<Border BorderBrush="Black" BorderThickness="1" Padding="5" CornerRadius="5">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<TextBlock x:Name="PlaylistNameTextBlock" Grid.Column="0" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>

			<Button x:Name="SelectButton" Grid.Column="1" Content="Select" HorizontalAlignment="Right"/>
		</Grid>
	</Border>
</UserControl>
