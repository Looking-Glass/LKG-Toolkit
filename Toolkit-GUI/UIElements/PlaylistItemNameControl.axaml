<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ToolkitGUI.PlaylistItemNameControl">
	<Border BorderBrush="Black" Background="LightGray" BorderThickness="1" Margin="10 5" Padding="10" CornerRadius="2" PointerPressed="Border_PointerPressed">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<TextBlock x:Name="PlaylistNameTextBlock" Grid.Column="0" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>

			<Button x:Name="DeleteButton" Grid.Column="1" Content="Delete" HorizontalAlignment="Right" Click="DeleteButton_Click"/>
		</Grid>
	</Border>
</UserControl>
