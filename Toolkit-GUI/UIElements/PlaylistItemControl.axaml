<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ToolkitGUI.PlaylistItemControl">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Name="SelectionBorder" Background="Transparent" BorderBrush="Blue" BorderThickness="2">
			<StackPanel Orientation="Horizontal">
				<TextBlock Name="FileNameTextBlock" FontWeight="Bold" FontSize="16" Margin="5"/>
				<TextBlock Name="MediaTypeTextBlock" FontWeight="Bold" FontSize="16" Margin="5"/>
			</StackPanel>
		</Border>
		
	</Grid>
</UserControl>
